</head>
<%- include('../partial/homeCss')%>
<body>
<!-- Header Section Begin -->
<header class="header">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="header__logo">
                    <a href="./index.html"><img src="/img/logo.png" alt=""></a>
                </div>
            </div>
            <div class="col-lg-6">
                <nav class="header__menu">
                    <ul>
                        <li class="active"><a href="/product/home">Home <i class="fa fa-home" aria-hidden="true"></i></a></li>
                        <li><a href="/profile">Trang Cá Nhân <i class="fa fa-user" aria-hidden="true"></i></a></li>
                        <li><a href="#">Giỏ hàng <i class="fa fa-shopping-cart"></i></a></li>
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3">
                <div class="header__cart">
                    <ul>

                    </ul>
                </div>
            </div>
        </div>
        <div class="humberger__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>

<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                        <tr>
                            <th class="shoping__product">Products</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th></th>
                            <th>Total</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% let total = 0%>
                        <% product1.map(item => { %>
                        <tr>
                            <td class="shoping__cart__item">
                                <img src="<%= item?.product?.image %>" alt="" style="width: 100px; height: 100px">
                                <h5><%= item?.product?.name %></h5>
                            </td>
                            <td class="shoping__cart__price">
                                <%= item?.product?.price %> $
                            </td>
                            <form action="/cart/quantity/<%= item.product._id %>" method="post">
                            <td>
                                <div class="quantity">
                                    <div class="pro-qty">
                                       <input type="text" value="<%= item.amountProduct %>" name="amountProduct">
                                    </div>
                                </div>
                            </td>
                            <td>
                                <button><i class="fa fa-check" aria-hidden="true"></i></button>
                            </td>
                            </form>
                            <td class="shoping__cart__total">
                                <%= item.total%> $
                            </td>
                            <td class="shoping__cart__item__close">
                                <a href="/cart/delete/<%= item._id %>"><span class="icon_close"></span></a>
                            </td>
                        </tr>
                        <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__checkout">
                    <h5>Cart Total</h5>
                    <ul>
                        <li>Total <span><%= cart.total %> $</span></li>
                    </ul>
                    <a href="#" class="primary-btn">PROCEED TO CHECKOUT</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shoping Cart Section End -->

<!-- Footer Section Begin -->
<footer class="footer spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="footer__about">
                    <div class="footer__about__logo">
                        <a href="./index.html"><img src="img/logo.png" alt=""></a>
                    </div>
                    <ul>
                        <li>Address: 60-49 Road 11378 New York</li>
                        <li>Phone: +65 11.188.888</li>
                        <li>Email: hello@colorlib.com</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6 offset-lg-1">
                <div class="footer__widget">
                    <h6>Useful Links</h6>
